{
  "name": "pidginmq",
  "version": "0.0.1",
  "description": "Fast and reliable background jobs in Typescript",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "source": "./src/index.ts",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivanvs/pidginmq.git"
  },
  "keywords": [
    "pidginmq",
    "queues",
    "jobs",
    "postgresql"
  ],
  "author": "Ivan Vasiljevic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivanvs/pidginmq/issues"
  },
  "homepage": "https://github.com/ivanvs/pidginmq#readme",
  "devDependencies": {
    "@testcontainers/postgresql": "^10.7.2",
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.12.2",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.6",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "rimraf": "^5.0.5",
    "release-it": "17.4.1"
  },
  "dependencies": {
    "any-signal": "^4.1.1",
    "cron-parser": "^4.9.0",
    "lodash.throttle": "^4.1.1",
    "luxon": "^3.4.4",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "rxjs": "^7.8.1"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.(t|j)s$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
